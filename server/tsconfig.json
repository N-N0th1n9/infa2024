{
  "compilerOptions": {
    "lib": ["es6", "DOM"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [".git", "node_modules", "**/dist/*", "**/node_modules/*"]
}
